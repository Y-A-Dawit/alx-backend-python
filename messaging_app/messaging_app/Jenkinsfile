pipeline {
    agent any

    environment {
        PROJECT_DIR = "messaging_app"
        PYTHON = "python3"
        PIP = "pip3"
        VENV_DIR = "venv"
        REPORTS_DIR = "reports"
        TESTS_DIR = "tests"
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Pulling latest code from GitHub...'
                git branch: 'main', url: 'https://github.com/Y-A-Dawit/alx-backend-python.git', credentialsId: 'github-creds'
            }
        }

        stage('Prepare Project Structure') {
            steps {
                sh """
                    cd ${PROJECT_DIR}
                    mkdir -p ${REPORTS_DIR} ${TESTS_DIR}
                """
            }
        }

        stage('Set Up Python Environment') {
            steps {
                sh """
                    cd ${PROJECT_DIR}
                    ${PYTHON} -m venv ${VENV_DIR}
                    ${VENV_DIR}/bin/pip install --upgrade pip
                    ${VENV_DIR}/bin/pip install -r requirements.txt
                """
            }
        }

        stage('Run Tests') {
            steps {
                sh """
                    cd ${PROJECT_DIR}
                    ${VENV_DIR}/bin/pytest --maxfail=1 --disable-warnings -q \
                        --junitxml=${REPORTS_DIR}/pytest-report.xml \
                        --html=${REPORTS_DIR}/report.html --self-contained-html
                """
            }
            post {
                always {
                    publishHTML([ 
                        reportDir: "${PROJECT_DIR}/${REPORTS_DIR}",
                        reportFiles: "report.html",
                        reportName: "Pytest Report",
                        keepAll: true,
                        alwaysLinkToLastBuild: true,
                        allowMissing: true
                    ])
                }
            }
        }
    }

    post {
        success { echo 'Pipeline completed successfully ✅' }
        failure { echo 'Pipeline failed ❌ — check the Pytest Report' }
    }
}

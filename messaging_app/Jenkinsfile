pipeline {
    agent any
    environment {
        VENV_DIR = "${WORKSPACE}/venv"
    }
    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/Y-A-Dawit/alx-backend-python.git', credentialsId: 'github-creds'
            }
        }


        stage('Install System Dependencies') {
            steps {
                script {
                    // Install build dependencies in the container
                    sh '''
                    apt-get update
                    apt-get install -y gcc g++ make pkg-config libmariadb-dev libmariadb-dev-compat
                    '''
                }
            }
        }

        stage('Setup Python Environment') {
            steps {
                sh '''
                python3 -m venv $VENV_DIR
                source $VENV_DIR/bin/activate
                pip install --upgrade pip
                pip install -r messaging_app/requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                source $VENV_DIR/bin/activate
                pytest --junitxml=report.xml
                '''
            }
            post {
                always {
                    junit 'report.xml'
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished'
        }
    }
}

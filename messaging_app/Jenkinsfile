pipeline {
  agent any

  options {
    timestamps()
    ansiColor('xterm')
  }

  environment {
    // Make pip quieter & faster between runs
    PIP_DISABLE_PIP_VERSION_CHECK = '1'
    PIP_CACHE_DIR = "${WORKSPACE}/.pip-cache"
  }

  stages {
    stage('Checkout') {
      steps {
        // Clone the alx-backend-python repo using your GitHub credentials
        checkout([
          $class: 'GitSCM',
          branches: [[name: '*/main']], // change if your default branch is different
          userRemoteConfigs: [[
            url: 'https://github.com/Y-A-Dawit/alx-backend-python.git',
            credentialsId: 'github-creds'
          ]]
        ])
      }
    }

    stage('Install dependencies') {
      steps {
                dir('messaging_app') {
                    sh 'python3.11 -m venv venv'
                    sh './venv/bin/pip install --upgrade pip'
                    sh './venv/bin/pip install -r requirements.txt'
                }
            }

    }

    stage('Run tests') {
      steps {
                dir('messaging_app') {
                    sh './venv/bin/pytest --maxfail=1 --disable-warnings -q --junitxml=test-results.xml'
                }
            }
      post {
        always {
          // Publish test report; visible under "Test Result"
          junit 'messaging_app/reports/junit/pytest.xml'
          // Keep reports as build artifacts
          archiveArtifacts artifacts: 'messaging_app/reports/**', fingerprint: true
        }
      }
    }
  }
}
